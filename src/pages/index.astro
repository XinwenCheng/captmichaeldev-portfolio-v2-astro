---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import ProductShowcase from "../components/ProductShowcase.astro";
import Principles from "../components/Principles.astro";
import TechStack from "../components/TechStack.astro";
import Footer from "../components/Footer.astro";
import { SITE } from "../config/site.mjs";
---

<Layout
	title="Michael C. | Solo Founder"
	description="Building high-intelligence, low-friction solutions for the modern web."
	canonicalURL={SITE.url}
>
	<main id="main-content" role="main" class="overflow-x-hidden">
		<Hero />
		<ProductShowcase />
		<Principles />
		<TechStack />
	</main>
	<Footer />
</Layout>
