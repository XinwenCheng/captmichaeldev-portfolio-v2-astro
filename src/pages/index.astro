---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import ProductShowcase from "../components/ProductShowcase.astro";
import Principles from "../components/Principles.astro";
import TechStack from "../components/TechStack.astro";
import Footer from "../components/Footer.astro";
import { SITE } from "../config/site.mjs";
---

<Layout
	title="Michael C. | Solo Founder"
	description="Building high-intelligence, low-friction solutions for the modern web."
	canonicalURL={SITE.url}
>
	<main id="main-content" role="main" class="overflow-x-hidden">
		<!-- Hero & Solutions Grid Container -->
		<div
			class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-8 lg:gap-12 max-w-[1600px] mx-auto min-h-[100dvh] md:min-h-[95vh]"
		>
			<Hero />
			<ProductShowcase />
		</div>
		<Principles />
		<TechStack />
	</main>
	<Footer />
</Layout>
