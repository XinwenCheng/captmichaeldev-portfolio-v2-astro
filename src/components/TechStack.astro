---
const stack = [
	{ name: "Next.js", category: "Framework" },
	{ name: "Astro", category: "Framework" },
	{ name: "React Native", category: "Framework" },
	{ name: "Tailwind CSS", category: "Styling" },
	{ name: "TypeScript", category: "Language" },
	{ name: "Node.js", category: "Language" },
	{ name: "Stripe", category: "Payment" },
	{ name: "MongoDB", category: "Database" },
	{ name: "Serverless", category: "Infrastructure" },
	{ name: "...", category: "Miscellaneous" },
];
---

<section class="py-24 px-6 md:px-12 max-w-4xl mx-auto text-center">
	<h2 class="text-2xl font-bold text-soft-charcoal mb-8">Built With</h2>

	<div class="flex flex-wrap justify-center gap-4 mb-16">
		{
			stack.map((item) => (
				<div class="px-6 py-3 bg-white border border-black/10 rounded-full text-soft-charcoal font-medium shadow-sm">
					{item.name}
				</div>
			))
		}
	</div>

	<div
		class="inline-flex flex-col items-center bg-white p-8 rounded-2xl border border-black/5 shadow-sm max-w-sm w-full"
	>
		<span class="text-sm uppercase tracking-widest text-soft-charcoal/50 mb-2"
			>Performance Goal</span
		>
		<div class="flex items-baseline gap-1">
			<span class="text-5xl font-bold text-penguin-orange">100</span>
			<span class="text-xl text-soft-charcoal/40">/100</span>
		</div>
		<span class="mt-2 text-sm text-soft-charcoal/70">Lighthouse Score</span>
	</div>
</section>
