---
import { Icon } from "astro-icon/components";

const socialLinks = [
	{
		label: "X (Twitter)",
		href: "https://x.com/CaptMichaelDev",
		icon: "tabler:brand-x",
	},
	// {
	// 	label: "LinkedIn",
	// 	href: "https://www.linkedin.com/in/xinwencheng",
	// 	icon: "tabler:brand-linkedin",
	// },
];
---

<footer class="py-12 px-6 md:px-12 border-t border-black/5 bg-white">
	<div
		class="max-w-6xl mx-auto flex flex-col md:flex-row justify-between items-center gap-8"
	>
		<div
			class="flex flex-col items-center md:items-start text-center md:text-left"
		>
			<h3 class="font-bold text-soft-charcoal mb-2">Ready to ship?</h3>
			<a
				href="#solutions"
				class="inline-flex items-center gap-2 text-white bg-penguin-orange px-6 py-3 rounded-lg font-bold shadow-lg hover:shadow-xl hover:-translate-y-0.5 transition-all duration-300"
			>
				Explore my latest builds
				<Icon name="tabler:arrow-right" class="w-5 h-5" />
			</a>
		</div>

		<div class="flex items-center gap-6">
			{
				socialLinks.map((link) => (
					<a
						href={link.href}
						target="_blank"
						rel="noopener noreferrer"
						class="text-soft-charcoal/60 hover:text-penguin-orange transition-colors p-3 hover:bg-gray-50 rounded-full"
						aria-label={link.label}
					>
						<Icon name={link.icon} class="w-6 h-6" />
					</a>
				))
			}
		</div>

		<div class="text-sm text-soft-charcoal/40">
			&copy; {new Date().getFullYear()}
		</div>
	</div>
</footer>
