---
import { Icon } from "astro-icon/components";

const principles = [
	{
		title: "Anti-Subscription",
		description:
			"I believe in fair, unit-based pricing. Value should be paid for when received, not drained monthly from a credit card.",
		icon: "tabler:credit-card-off",
	},
	{
		title: "Zero-Friction UX",
		description:
			"Value must precede registration. My architectures prioritize 'Zero-Login' flows where users experience the product first.",
		icon: "tabler:login-2",
	},
	{
		title: "High-Signal AI",
		description:
			"Leveraging top-tier models like Claude 3.5 Sonnet to generate human-grade output, not just generic content wrappers.",
		icon: "tabler:brain",
	},
];
---

<section class="py-24 bg-soft-charcoal text-paper-cream">
	<div class="px-6 md:px-12 max-w-6xl mx-auto">
		<div class="mb-16 border-b border-white/10 pb-8">
			<h2 class="text-3xl md:text-4xl font-bold mb-4">Founder Principles.</h2>
			<p class="text-lg opacity-80 max-w-xl">The "Why" behind the code.</p>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-3 gap-12">
			{
				principles.map((item) => (
					<div class="space-y-4">
						<div class="w-12 h-12 flex items-center justify-center rounded-full bg-white/10 text-penguin-orange drop-shadow-[0_0_8px_rgba(255,90,0,0.4)]">
							<Icon name={item.icon} class="w-6 h-6" />
						</div>
						<h3 class="text-xl font-bold">{item.title}</h3>
						<p class="opacity-70 leading-relaxed max-w-[35ch] md:max-w-[40ch]">
							{item.description}
						</p>
					</div>
				))
			}
		</div>
	</div>
</section>
